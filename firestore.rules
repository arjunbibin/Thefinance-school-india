
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/admin_users/$(request.auth.uid)) ||
        get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'admin'
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    // Branding & Global Config
    match /config/branding {
      allow get: if true;
      allow write: if isAdmin();
    }

    match /admin_users/{adminUserId} {
      allow get: if isSignedIn() && (isOwner(adminUserId) || isAdmin());
      allow list: if isAdmin();
      allow write: if isAdmin();
    }

    match /system_settings/demo_class {
      allow get: if true;
      allow write: if isAdmin();
    }

    // Existing App Collections
    match /userProfiles/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }

    match /slides/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /gallery/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /courses/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /team/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /videos/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /testimonialVideos/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /reviews/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- DEFAULT DENY ---
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
