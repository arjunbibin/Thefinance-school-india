
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isStaff() {
      // Primary admin UID check (Hardcoded for maximum security and immediate access)
      let isAdmin = request.auth.uid == '3Vq3NnyBQVgwKcqdPIqSOof8glx1';
      
      // Staff check: must have a profile and a role that is not 'user'
      let userProfilePath = /databases/$(database)/documents/userProfiles/$(request.auth.uid);
      let isStaffMember = isSignedIn() && exists(userProfilePath) && get(userProfilePath).data.role != 'user';
      
      return isSignedIn() && (isAdmin || isStaffMember);
    }

    match /userProfiles/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isStaff());
      allow list: if isStaff();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if (isSignedIn() && request.auth.uid == userId) || isStaff();
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /config/branding {
      allow read: if true;
      allow write: if isStaff();
    }

    match /slides/{slideId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /gallery/{imageId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /courses/{courseId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /team/{memberId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /videos/{videoId} {
      allow read: if true;
      allow write: if isStaff();
    }

    match /testimonialVideos/{videoId} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Support for collection-level reads if needed
    match /{path=**}/testimonialVideos/{videoId} {
      allow read: if true;
    }
  }
}
