
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { 
          "type": "string", 
          "enum": ["admin", "user"],
          "default": "user"
        },
        "registrationDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "role"]
    },
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "A review or feedback message submitted by a user.",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string" },
        "content": { "type": "string" },
        "rating": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "content", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/userProfiles/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    },
    "/reviews/{reviewId}": {
      "schema": "Review",
      "description": "Feedback and reviews submitted by users."
    }
  }
}
