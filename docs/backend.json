
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile with role-based access control.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { 
          "type": "string", 
          "enum": ["admin", "content_head", "student_specialist", "accounts_head", "manager", "tech_head", "ops_head", "strategy_manager", "user"],
          "default": "user"
        },
        "registrationDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "role"]
    },
    "AppConfig": {
      "title": "AppConfig",
      "type": "object",
      "description": "Global application configuration including branding assets.",
      "properties": {
        "logoUrl": { "type": "string", "format": "uri" },
        "appName": { "type": "string" },
        "tagline": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/config/branding": {
      "schema": "AppConfig",
      "description": "Stores global branding configuration like logo and tagline."
    },
    "/userProfiles/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    }
  }
}
