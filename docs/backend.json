
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a staff member or admin profile.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { 
          "type": "string", 
          "enum": [
            "admin", 
            "content_head", 
            "student_specialist", 
            "accounts_head", 
            "general_manager", 
            "tech_head", 
            "operations_head", 
            "strategy_manager",
            "user"
          ],
          "default": "user"
        },
        "registrationDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "role"]
    },
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "A review or feedback message curated by admin.",
      "properties": {
        "id": { "type": "string" },
        "userName": { "type": "string" },
        "userPhoto": { "type": "string" },
        "content": { "type": "string" },
        "rating": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userName", "content", "createdAt"]
    },
    "AppConfig": {
      "title": "AppConfig",
      "type": "object",
      "description": "Global application configuration for branding.",
      "properties": {
        "appName": { "type": "string" },
        "logoUrl": { "type": "string" },
        "tagline": { "type": "string" }
      }
    },
    "Slide": {
      "title": "Slide",
      "type": "object",
      "description": "A slide for the homepage slideshow.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" },
        "order": { "type": "number" }
      },
      "required": ["title", "imageUrl", "order"]
    },
    "GalleryImage": {
      "title": "GalleryImage",
      "type": "object",
      "description": "An image for the school memories gallery.",
      "properties": {
        "id": { "type": "string" },
        "imageUrl": { "type": "string" },
        "description": { "type": "string" },
        "imageHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["imageUrl", "createdAt"]
    },
    "Course": {
      "title": "Course",
      "type": "object",
      "description": "A school course or program.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "description": { "type": "string" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" },
        "category": { "type": "string" },
        "rating": { "type": "number" },
        "lessons": { "type": "string" },
        "highlights": { "type": "array", "items": { "type": "string" } },
        "buyLink": { "type": "string", "format": "uri" },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "category", "order"]
    },
    "TeamMember": {
      "title": "TeamMember",
      "type": "object",
      "description": "A member of the school staff or leadership team.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "role": { "type": "string" },
        "bio": { "type": "string" },
        "imageUrl": { "type": "string" },
        "isFounder": { "type": "boolean", "default": false },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "role", "order"]
    },
    "Video": {
      "title": "Video",
      "type": "object",
      "description": "A video clip for the school showcase.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "videoUrl": { "type": "string" },
        "order": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["videoUrl", "order"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/userProfiles/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    },
    "/reviews/{reviewId}": {
      "schema": "Review",
      "description": "Feedback and reviews curated by users."
    },
    "/config/branding": {
      "schema": "AppConfig",
      "description": "Global branding configuration."
    },
    "/slides/{slideId}": {
      "schema": "Slide",
      "description": "Homepage slideshow configuration."
    },
    "/gallery/{imageId}": {
      "schema": "GalleryImage",
      "description": "Images for the school memories gallery."
    },
    "/courses/{courseId}": {
      "schema": "Course",
      "description": "Academic courses and programs."
    },
    "/team/{memberId}": {
      "schema": "TeamMember",
      "description": "School staff and leadership team data."
    },
    "/videos/{videoId}": {
      "schema": "Video",
      "description": "Videos for the school showcase."
    }
  }
}
