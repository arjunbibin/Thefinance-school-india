
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile within the FinanceVerse 3D application.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "registrationDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "firstName", "lastName", "email", "registrationDate"]
    },
    "AppConfig": {
      "title": "AppConfig",
      "type": "object",
      "description": "Global application configuration including branding assets.",
      "properties": {
        "logoUrl": { "type": "string", "format": "uri" },
        "appName": { "type": "string" },
        "tagline": { "type": "string" }
      }
    },
    "Course": {
      "title": "Course",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "durationHours": { "type": "number" },
        "difficultyLevel": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" }
      },
      "required": ["id", "title", "description", "category", "durationHours", "difficultyLevel"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/config/branding": {
      "schema": "AppConfig",
      "description": "Stores global branding configuration like logo and tagline."
    },
    "/userProfiles/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    }
  }
}
