
{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a staff member or admin profile.",
      "properties": {
        "id": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { 
          "type": "string", 
          "enum": [
            "admin", 
            "content_head", 
            "student_specialist", 
            "accounts_head", 
            "general_manager", 
            "tech_head", 
            "operations_head", 
            "strategy_manager",
            "user"
          ],
          "default": "user"
        },
        "registrationDate": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "email", "role"]
    },
    "Review": {
      "title": "Review",
      "type": "object",
      "description": "A review or feedback message submitted by a user.",
      "properties": {
        "userId": { "type": "string" },
        "userName": { "type": "string" },
        "userEmail": { "type": "string" },
        "content": { "type": "string" },
        "rating": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "content", "createdAt"]
    },
    "AppConfig": {
      "title": "AppConfig",
      "type": "object",
      "description": "Global application configuration for branding.",
      "properties": {
        "appName": { "type": "string" },
        "logoUrl": { "type": "string" },
        "tagline": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/userProfiles/{userId}": {
      "schema": "UserProfile",
      "description": "User profile data."
    },
    "/reviews/{reviewId}": {
      "schema": "Review",
      "description": "Feedback and reviews submitted by users."
    },
    "/config/branding": {
      "schema": "AppConfig",
      "description": "Global branding configuration."
    }
  }
}
